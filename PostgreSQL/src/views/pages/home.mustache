<fieldset class='fieldCad'>
    <legend>Novo Usuário</legend>
    <form method="POST" action="/novousuario">
        Nome:<input type="text" name="name" placeholder="Digite um nome" /><br/><br/>
        Idade: <input type="text" name="age" placeholder="Digite uma idade" /><br/><br/>
        <input type="submit" value="Inserir Usuário" />
    </form>
</fieldset>

<h2>Usuários do Banco de Dados</h2><br>
   
    <table class="my-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Botões</th>
            </tr>
        </thead>
         {{#users}}
        <tbody>
            <tr>
                <td>{{name}}</td>
                <td>{{age}}</td>
                <td>
                    - <a href='/usuario/{{id}}/mais'>+</a>
                    - <a href='/usuario/{{id}}/menos'>-</a>
                    - <a href='/usuario/{{id}}/excluir'>Excluir</a>
                </td>
            </tr>
        </tbody>
        {{/users}}
    </table>   
    
<h2>Produtos</h2><br>
    <table class="my-table">
        <thead>
                <tr>
                    <th>Produço</th>
                    <th>R$</th>
                </tr>
        </thead>
        {{#products}}
            {{>partials/productItem}}
        {{/products}}
    </table>

<hr/>
<h2>Filtre os Produtos por Preço</h2>
    <form method="GET" action="/">
        Valor R$:<input type="search" name="q" placeholder="Filtro de Preço" value="{{ query }}" />
    </form>
<ul>
    {{#expensives}}
        {{>partials/productItem}}
    {{/expensives}}
</ul>

