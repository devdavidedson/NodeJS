{{>partials/header}}

<fieldset>
    <legend>Adicionar Novo Usuário</legend>
    <form action="/cadastrar-usuario" method="POST">
        <input type="text" name="name" placeholder="Digite seu nome"><br><br>
        <input type="text" name="lastName" placeholder="Digite seu sobrenome"><br><br>
        <input type="email" name="email" placeholder="Digite seu e-mail"><br><br>
        <input type="number" name="age" placeholder="Digite sua idade atual"><br><br>
        <input type="text" name="interests" placeholder="Digite seus interesses, separado!"><br><br>
        <button type="submit">Inserir</button>
    </form>
</fieldset>

<h2>Usuários</h2>
<ul>
    {{#users}}
    {{>partials/users}}
    {{/users}}
    {{^users}}
    Nenhum usuário encontrado no banco de dados
    {{/users}}
</ul>

{{>partials/footer}}